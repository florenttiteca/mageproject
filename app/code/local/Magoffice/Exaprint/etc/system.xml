<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <exaprint translate="label">
            <label>Exaprint</label>
            <tab>flux</tab>
            <frontend_type>text</frontend_type>
            <sort_order>800</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <adapter_soap>
                    <label>Connection</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <url_webservice translate="label">
                            <label>Url du Webservice</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_webservice>
                        <username translate="label">
                            <label>Identifiant</label>
                            <comment>email</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                        <password translate="label">
                            <label>Mot de passe</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                        <proxy_host translate="label">
                            <label>Proxy</label>
                            <comment>Laisser vide si pas de proxy</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </proxy_host>
                        <proxy_port translate="label">
                            <label>Port proxy</label>
                            <comment>Laisser vide si pas de proxy</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </proxy_port>
                    </fields>
                </adapter_soap>
                <ftp>
                    <label>FTP Exaprint</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <host translate="label">
                            <label>Adresse Ip</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </host>
                        <port translate="label">
                            <label>Port</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </port>
                        <username translate="label">
                            <label>Identifiant</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                        <password translate="label">
                            <label>Mot de passe</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                    </fields>
                </ftp>
                <product_filter>
                    <label>Filtrage Produit</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <excluded_products translate="label">
                            <label>ID produit (exclure)</label>
                            <comment>Liste séparée par des ";"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </excluded_products>
                        <options_codes translate="label">
                            <label>Codes options "Verso" (détection)</label>
                            <comment>Liste séparée par des ";"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </options_codes>
                        <matrix_configuration translate="label">
                            <label>Configuration Filtrage/Matrice</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </matrix_configuration>
                    </fields>
                </product_filter>
                <api_configuration>
                    <label>Configuration API</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <exec_mode translate="label">
                            <label>Mode d'exécution</label>
                            <frontend_type>select</frontend_type>
                            <source_model>magoffice_exaprint/adminhtml_system_config_source_executionmodes</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </exec_mode>
                        <order_test_prefix translate="label">
                            <label>Préfixe pour commande Test</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_test_prefix>
                        <order_delay translate="label">
                            <label>Commande : Délai pour envoi vers production (Jours)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_delay>
                        <order_status_delay translate="label">
                            <label>Statuts : Délai pour récupération (Jours)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status_delay>
                        <nb_order_max translate="label">
                            <label>Nombre de commandes maximum par exécution</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nb_order_max>
                        <min_updated translate="label">
                            <label>Intervalle de mise à jour (en heure)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <comment>Les commandes prises en compte seront uniquement celles mises à jour depuis plus de X heures.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </min_updated>
                        <product_margin translate="label">
                            <label>Marge des produits</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_margin>
                    </fields>
                </api_configuration>
                <status_configuration>
                    <label>Gestion/Cfg des statuts Exaprint</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <exaprint_status translate="label">
                            <label>Libellé des statuts Exaprint</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </exaprint_status>
                        <order_not_complete translate="label">
                            <label>Groupe : ORDER_NOT_COMPLETE</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_not_complete>
                        <order_in_progress translate="label">
                            <label>Groupe : ORDER_IN_PROGRESS</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_in_progress>
                        <order_error translate="label">
                            <label>Groupe : ORDER_ERROR</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_error>
                        <order_shipment_in_progress translate="label">
                            <label>Groupe : ORDER_SHIPMENT_IN_PROGRESS</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_shipment_in_progress>
                        <order_canceled translate="label">
                            <label>Groupe : ORDER_CANCELED</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_canceled>
                        <order_complete translate="label">
                            <label>Groupe : ORDER_COMPLETE</label>
                            <frontend_type>text</frontend_type>
                            <comment>Liste séparée par des ","</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_complete>
                        <magoffice_status translate="label">
                            <label>Libellé des statuts Top-Office</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </magoffice_status>
                    </fields>
                </status_configuration>
            </groups>
        </exaprint>
    </sections>
</config>